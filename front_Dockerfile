FROM caddy:2.9

RUN set -eux; \
    apt-get update \
    && apt-get install -y --no-install-recommends\
    nodejs \
    npm \
    && apt-get clean

WORKDIR /app

COPY --link --chmod=755 front_start_container.sh /usr/local/bin/start-container

COPY --link front_Caddyfile /etc/caddy/Caddyfile

COPY --link front/package*.json ./

RUN npm install

COPY front/. .